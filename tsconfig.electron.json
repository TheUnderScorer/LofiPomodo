{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES6",
    "moduleResolution": "node",
    "outDir": "build",
    "baseUrl": ".",
    "importHelpers": false,
    "noEmit": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/main/*.ts",
    "src/typings/*.ts",
    "src/shared/*.ts",
    "db/migrations/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
